<h1>Listing books</h1>

<table>
  <tr>
    <th>Bookid</th>
    <th>Booktitle</th>
    <th>Author</th>
    <th>Publisher</th>
    <th>Isbn</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.bookId %></td>
    <td><%= book.bookTitle %></td>
    <td><%= book.author %></td>
    <td><%= book.publisher %></td>
    <td><%= book.isbn %></td>
    <td><%= book.description %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

