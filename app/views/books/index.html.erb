<h1>Listing books</h1>

<table>
  <tr>
    <th>Booktitle</th>
    <th>Author</th>
    <th>genre</th>
    <th>Publisher</th>
    <th>Isbn</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.bookTitle %></td>
    <td><%= book.author %></td>
    <td><%= book.genre[:name] %></td>
    <td><%= book.publisher %></td>
    <td><%= book.isbn %></td>
    <td><%= book.description %></td>
    <td><%= link_to 'Show', book %></td>
        <% if anybody_signed_in? %>
    <% if (current_customer.id).to_s==(book.customerId).to_s %>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>

     <%	end %>
    <% end %>
  </tr>
<% end %>
</table>
<%= will_paginate @books %>

<br />

<% if anybody_signed_in? %>
    <%= link_to 'New Book', new_book_path %>
<% else %>
  <%= link_to('Sign up to add new books', new_customer_registration_path)  %>
<% end %>
