<h1>Editing profile</h1>
<% if anybody_signed_in? %>
 <% if @customer.id == current_customer.id %>
 <%= form_for(@customer) do |f| %>
   <div class="field">
     <%= f.label :bio %><br />
     <%= f.text_area :bio %>
   </div>
   <div class="actions">
     <%= f.submit %>
   </div>
   Your emailadress is <%= @customer.email %>. To edit your avatar, go to <a href="http://gravatar.com/">gravatar</a>.
 <% end %>
 <% else %>
 <p>'You can only edit your own profile.' </p>
 <% end %>
<% else%>
 <p>You have to be logged in to edit your profile.</p>
<% end %>
<%= link_to 'Back', books_path %>
