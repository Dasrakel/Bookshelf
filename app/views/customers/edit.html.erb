<h1>Editing profile</h1>

<% if @customer.id == current_customer.id %>
<%= form_for(@customer) do |f| %>
  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% else %>
<p>'You can only edit your own profile.' </p>
<% end %>
<%= link_to 'Back', books_path %>
