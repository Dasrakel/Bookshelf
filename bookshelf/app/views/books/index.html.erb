<h1>Listing books</h1>

<table>
  <tr>
    <th>Bookid</th>
    <th>Author</th>
    <th>Title</th>
    <th>Publisher</th>
    <th>Genreid</th>
    <th>Dateadded</th>
    <th>Totalpages</th>
    <th>Imageid</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%=h book.bookId %></td>
    <td><%=h book.author %></td>
    <td><%=h book.title %></td>
    <td><%=h book.publisher %></td>
    <td><%=h book.genreId %></td>
    <td><%=h book.dateAdded %></td>
    <td><%=h book.totalPages %></td>
    <td><%=h book.imageId %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

